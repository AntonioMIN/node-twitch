{
	"compilerOptions": {
	  "target": "es6",
	  "module": "commonjs",
	  "lib": [
		"es6",
		"dom"
	  ],
	  "strict": true,
	  "noImplicitAny": true,
	  "esModuleInterop": true,
	  "declaration": true,
	  "outDir": "dist",
	  "sourceMap": false,
	  "watch": true
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules",
	  "**/*.spec.ts",
	  "dist"
	]
  }
  